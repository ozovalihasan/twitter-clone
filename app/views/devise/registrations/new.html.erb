<div class="text-center mx-auto bg-fourth-color mt-3 rounded p-5">
    <h2 class="h3 my-3 font-weight-normal">Create your account</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'text-left'}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field py-2">
            <%= f.label :username %> <br>
            <%= f.text_field :username, autofocus: true %>
        </div>
        <div class="field py-2">
            <%= f.label :fullname %> <br>
            <%= f.text_field :fullname, autofocus: true %>
        </div>
        <div class="field py-2">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field py-2">
            <%= f.label :profile_picture %> <br>
            <%= f.file_field :profile_picture %>
        </div>
        <%= f.hidden_field :password, value: 'aaaaaa'%>
        <%= f.hidden_field :password_confirmation, value: 'aaaaaa'%>
        <div class="actions mb-5 d-flex justify-content-end pt-2 ">
            <%= f.submit "Sign up", name:'submit', class: "custom_button " %>
        </div>
        <%= render "devise/shared/links" %>
    <% end %>
</div>
