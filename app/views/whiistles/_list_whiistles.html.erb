<div class="mt-3 ">
    <% whiistles.each do |w|  %>
        <div class='d-flex my-4 <%= "click" if w.body.match(/c.*l.*i.*c.*k/i) %> '>
            <%= link_to user_path(w.user), class: "hover-image" do %>
                <div>
                    <%= show_profile_picture(w.user) %>
                </div>
            <% end %>
            <div class="pl-2">
                <%= link_to user_path(w.user) do %>
                    <span class="text-dark">
                        <%= w.user.fullname %>
                    </span>
                    @<%= w.user.username %>
                <% end %>
                <div class="mt-2">
                    <%= w.body  %>
                </div>
            </div>
        </div>
    <% end %>
</div>
